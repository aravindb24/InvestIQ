{
  "manifest_version": 3,
  "name": "Stock Monitor",
  "version": "1.0",
  "description": "Monitor stock prices with real-time charts using Alpha Vantage API",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.alphavantage.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}